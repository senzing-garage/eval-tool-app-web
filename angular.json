{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "@senzing/eval-tool-app-web": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src/app-ui",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/@senzing/sz-explorer-grpc",
            "index": "src/app-ui/index.html",
            "browser": "src/app-ui/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/ui-common/src/lib/scss/styles.scss",
              "src/ui-common/src/lib/scss/themes/senzing.css",
              "src/app-ui/scss/styles.scss",
              "src/app-ui/scss/theme.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "5MB",
                  "maximumError": "10MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "100kB",
                  "maximumError": "200kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "@senzing/eval-tool-app-web:build:production"
            },
            "development": {
              "buildTarget": "@senzing/eval-tool-app-web:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/app-ui/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    },
    "@senzing/rest-api-client-ng": {
      "root": "src/rest-api-client-ng",
      "sourceRoot": "src/rest-api-client-ng/projects/rest-api-client-ng/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "src/rest-api-client-ng/projects/rest-api-client-ng/subrepo.tsconfig.lib.json",
            "project":  "src/rest-api-client-ng/projects/rest-api-client-ng/subrepo.ng-package.json"
          },
          "configurations": {}
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/rest-api-client-ng/projects/rest-api-client-ng/src/test.ts",
            "tsConfig": "src/rest-api-client-ng/projects/rest-api-client-ng/subrepo.tsconfig.spec.json",
            "karmaConfig": "src/rest-api-client-ng/projects/rest-api-client-ng/karma.conf.js"
          }
        }
      }
    },
    "@senzing/eval-tool-ui-common": {
      "root": "src/ui-common",
      "sourceRoot": "src/ui-common/src",
      "projectType": "library",
      "prefix": "sz",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "src/ui-common/src/subrepo.tsconfig.lib.json",
            "project":  "src/ui-common/src/subrepo.ng-package.json"
          },
          "configurations": {}
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/ui-common/src/test.ts",
            "tsConfig": "src/ui-common/src/subrepo.tsconfig.spec.json",
            "karmaConfig": "src/ui-common/src/karma.conf.js"
          }
        }
      }
    }
  }
}
